@model IEnumerable<FilmReviewMVC.Models.Director>

@{
    ViewBag.Title = "Index";
}

<br />
    <h2>Directors</h2>
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DirectorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nationality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HighestRatedMovie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DirectorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nationality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HighestRatedMovie)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DirectorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DirectorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DirectorID }) |
            @Html.ActionLink("Comment", "DirectorComments", new { id = item.DirectorID })
        </td>
    </tr>
}

</table>
